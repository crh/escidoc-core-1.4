<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <!-- license -->
    <fileSet>
      <directory>${project.basedir}/..</directory>
      <includes>
        <include>license/*</include>
      </includes>
    </fileSet>

    <!--  ear -->
    <fileSet>
      <directory>${project.basedir}/../escidoc-core.ear/target</directory>
      <outputDirectory>/ear</outputDirectory>
      <includes>
        <include>*.ear</include>
      </includes>
    </fileSet>
    <!--  war -->
    <fileSet>
      <directory>${project.build.directory}/packages</directory>
      <outputDirectory>/war</outputDirectory>
      <includes>
        <include>*.war</include>
      </includes>
    </fileSet>


    <!-- sql scripte -->
    <fileSet>
      <directory>${project.basedir}/../bin/data/release/bin</directory>
      <outputDirectory>/bin</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../common/src/main/resources/sql</directory>
      <outputDirectory>/sql</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- XSDs -->
    <fileSet>
      <directory>${project.basedir}/..</directory>
      <outputDirectory>/xsd</outputDirectory>
      <includes>
        <include>*/src/main/xsd/**/*.xsd</include>
      </includes>
    </fileSet>

    <!-- DOC -->
    <fileSet>
      <directory>${project.build.directory}/site/technical-documentation/pdf</directory>
      <outputDirectory>/doc/api</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>

    <!-- ontologies -->
    <fileSet>
      <directory>${project.basedir}/../escidoc-core.war/src/main/webapp/ontologies</directory>
      <outputDirectory>/ontologies</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
