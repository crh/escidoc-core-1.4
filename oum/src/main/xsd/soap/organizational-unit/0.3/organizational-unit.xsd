                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
    <xs:element name="parent-ous">
        <xs:annotation>
            <xs:documentation>
                <create>optional</create>
                <update>optional</update>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element name="parent-ou" minOccurs="0"
                    maxOccurs="unbounded">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                            <comment> The list of parents is updated with this
                                list. </comment>
                        </xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:attribute name="objid">
                            <xs:annotation>
                                <xs:documentation>
                                    <create>required</create>
                                    <update>required</update>
                                </xs:documentation>
                            </xs:annotation>
                        </xs:attribute>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
            <xs:attribute name="last-modification-date">
                <xs:annotation>
                    <xs:documentation>
                        <create>discarded</create>
                        <update>required (see note 1.)</update>
                        <comment> 1. This attribute is contained if the
                            resources element is retrieved as a sub resource. It
                            is not contained in the resources element within the
                            organizational-unit element. </comment>
                    </xs:documentation>
