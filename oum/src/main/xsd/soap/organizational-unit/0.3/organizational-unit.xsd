<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:organizational-unit="http://www.escidoc.de/schemas/organizationalunit/0.3"
    targetNamespace="http://www.escidoc.de/schemas/organizationalunit/0.3"
    elementFormDefault="qualified" attributeFormDefault="unqualified">
    <xs:import namespace="http://www.w3.org/XML/1998/namespace"
        schemaLocation="http://www.escidoc.org/schemas/soap/common/0.3/xml.xsd"/>
    
    <!-- This xsd is used in the API of Organizational Units; SOAP interface -->
    <xs:element name="organizational-unit">
        <xs:annotation>
            <xs:documentation>
                <para> Following you will find information which elements and
                    attributes are "required", "optional", "not-allowed" or
                    will be "discarded" in the input XML-stream when creating or
                    updating such an object. </para>
                <para> In "create" the rule for creating a new object is defined.
                    </para>
                <para> In "update" the rule for updating an object is defined.
                    </para>
                <para> Possible values are: required | optional | not-allowed |
                    discarded </para>
                <para> required: this element or attribute has to be delivered
                    </para>
                <para> optional: this element or attribute can be delivered and
                    will be kept </para>
                <para> not-allowed: this element or attribute is not allowed in
                    delivery and will cause an exception </para>
                <para> discarded: this element or attribute can be delivered but
                    will not be used </para>
            </xs:documentation>
            <xs:documentation>
                <create>required</create>
                <update>required</update>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="organizational-unit:properties"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>discarded</create>
                            <update>discarded</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element
                    ref="organizational-unit:organization-details">
                    <xs:annotation>
                        <xs:documentation>
                            <create>required</create>
                            <update>required</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element ref="organizational-unit:parent-ous"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                            <comment> The list of parents is updated with this
                                list. </comment>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
            <xs:attribute name="objid">
                <xs:annotation>
                    <xs:documentation>
                        <create>discarded</create>
                        <update>required</update>
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute name="last-modification-date">
                <xs:annotation>
                    <xs:documentation>
                        <create>discarded</create>
                        <update>required</update>
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
    <xs:simpleType name="status-types">
        <xs:restriction base="xs:token">
            <xs:enumeration value="created"/>
            <xs:enumeration value="opened"/>
            <xs:enumeration value="closed"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:element name="properties">
        <xs:annotation>
            <xs:documentation>
                <create>discarded</create>
                <update>discarded</update>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element name="creation-date" type="xs:dateTime"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>discarded</create>
                            <update>discarded</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="created-by" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>discarded</create>
                            <update>discarded</update>
                        </xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:attribute name="objid">
                            <xs:annotation>
                                <xs:documentation>
                                    <create>discarded</create>
                                    <update>discarded</update>
                                </xs:documentation>
                            </xs:annotation>
                        </xs:attribute>
                    </xs:complexType>
                </xs:element>
                <xs:element name="modified-by" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>discarded</create>
                            <update>discarded</update>
                        </xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:attribute name="objid">
                            <xs:annotation>
                                <xs:documentation>
                                    <create>discarded</create>
                                    <update>discarded</update>
                                </xs:documentation>
                            </xs:annotation>
                        </xs:attribute>
                    </xs:complexType>
                </xs:element>
                <xs:element name="public-status"
                    type="organizational-unit:status-types"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>discarded</create>
                            <update>discarded</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="has-children" type="xs:boolean"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>discarded</create>
                            <update>discarded</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:sequence>
            <xs:attribute name="last-modification-date">
                <xs:annotation>
                    <xs:documentation>
                        <create>discarded</create>
                        <update>required (see note 1.)</update>
                        <comment> 1. This attribute is contained if the
                            properties element is retrieved as 
                            a sub resource. It is not contained in the 
                            properties element element within the
                            organizational-unit element. </comment>
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
    <xs:element name="organization-details">
        <xs:annotation>
            <xs:documentation>
                <create>required</create>
                <update>required</update>
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element name="abbreviation"
                    type="xs:normalizedString">
                    <xs:annotation>
                        <xs:documentation>
                            <create>required</create>
                            <update>required</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="name" type="xs:normalizedString">
                    <xs:annotation>
                        <xs:documentation>
                            <create>required</create>
                            <update>required</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="uri" type="xs:token" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="organization-type"
                    type="xs:normalizedString" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="description" type="xs:string"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="external-id" type="xs:token"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="postcode" type="xs:normalizedString"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="country" type="xs:normalizedString"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="region" type="xs:normalizedString"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="address" type="xs:string" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="city" type="xs:normalizedString"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="telephone" type="xs:normalizedString"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="fax" type="xs:normalizedString"
                    minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="email" type="xs:token" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>
                <xs:element name="geo-coordinate" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            <create>optional</create>
                            <update>optional</update>
                        </xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="location-longitude"
                                type="xs:token">
                                <xs:annotation>
                                    <xs:documentation>
                                        <create>optional</create>
                                        <update>optional</update>
                                    </xs:documentation>
                                </xs:annotation>
                            </xs:element>
                            <xs:element name="location-latitude"
                                type="xs:token">
                                <xs:annotation>
                                    <xs:documentation>
                                        <create>optional</create>
                                        <update>optional</update>
                                    </xs:documentation>
                                </xs:annotation>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
            <xs:attribute name="last-modification-date">
                <xs:annotation>
                    <xs:documentation>
                        <create>discarded</create>
                        <update>required (see note 1.)</update>
                        <comment> 1. This attribute is contained if the
                            organization-details element is retrieved as 
                            a sub resource. It is not contained in the 
