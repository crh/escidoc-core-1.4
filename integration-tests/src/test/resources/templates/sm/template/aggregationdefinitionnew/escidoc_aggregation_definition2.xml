<?xml version="1.0" encoding="UTF-8"?>
<aggregation-definition 
    xmlns="http://www.escidoc.de/schemas/aggregationdefinition/0.4"
    xmlns:prop="http://escidoc.de/core/01/properties/"
    xmlns:srel="http://escidoc.de/core/01/structural-relations/"
    xmlns:xlink="http://www.w3.org/1999/xlink">
    <properties>
        <prop:name>Page Statistics for PubMan</prop:name>
        <srel:scope xlink:href="/statistic/scope/escidoc:scope99999" />
    </properties>
	<aggregation-table>
		<name>Page_Statistics</name>
		<field>
			<info-field feed="statistics-data">
				<name>page</name>
				<type>text</type>
				<xpath><![CDATA[//parameter[@name="page"]/stringvalue]]></xpath>
			</info-field>
		</field>
		<field>
			<time-reduction-field feed="statistics-data">
				<name>month</name>
				<reduce-to>month</reduce-to>
			</time-reduction-field>
		</field>
		<field>
			<time-reduction-field feed="statistics-data">
				<name>year</name>
				<reduce-to>year</reduce-to>
			</time-reduction-field>
		</field>
		<field>
			<count-cumulation-field>
				<name>requests</name>
			</count-cumulation-field>
		</field>
		<field>
			<difference-cumulation-field feed="statistics-data">
				<name>sessions</name>
				<xpath>//parameter[@name="session_id"]/stringvalue</xpath>
			</difference-cumulation-field>
		</field>
		<index>
			<name>time_idx</name>
			<field>month</field>
			<field>year</field>
		</index>
	</aggregation-table>
	<aggregation-table>
		<name>Else_Statistics</name>
		<field>
			<info-field feed="statistics-data">
				<name>date</name>
				<type>date</type>
				<xpath>//parameter[@name="time"]/datevalue</xpath>
			</info-field>
		</field>
		<field>
			<time-reduction-field feed="statistics-data">
				<name>month</name>
				<reduce-to>month</reduce-to>
			</time-reduction-field>
		</field>
		<field>
			<time-reduction-field feed="statistics-data">
				<name>year</name>
				<reduce-to>year</reduce-to>
			</time-reduction-field>
		</field>
		<field>
			<count-cumulation-field>
				<name>requests</name>
			</count-cumulation-field>
		</field>
		<field>
			<difference-cumulation-field feed="statistics-data">
				<name>sessions</name>
				<xpath>//parameter[@name="session_id"]/stringvalue</xpath>
			</difference-cumulation-field>
		</field>
		<index>
			<name>time_idx1</name>
			<field>month</field>
			<field>year</field>
		</index>
	</aggregation-table>
	<statistic-data>
		<statistic-table>
			<xpath>//parameter[@name="page"] > 66</xpath>
		</statistic-table>
	</statistic-data>
</aggregation-definition>
